@import "../_index.styl"

.numbered-list__marker
  position relative
  float left
  font-weight $font-weight-extraBold

  &::after
    pseudo()
    bottom 2px
    left 0
    width 100%
    height 1px
    background-color $red-error

    +above($media-screen-tablet)
      bottom 1px

.numbered-list__description
  padding-left 29px

  +above($media-screen-tablet)
    padding-left 38px
