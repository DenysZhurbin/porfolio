@import "./_core/_base/_main/_reset.styl"
@import "./_core/_mixins.styl"
@import "./_core/_variables.styl"

$mobile = 480px
$tablet = 768px
$desktop = 960px

// Global

body
    margin 0
    font-family: 'Open Sans', sans-serif;
    font-weight 400
    font-size 10px
    line-height 16px
    color #000000
    +above($mobile)
        font-size 12px
        line-height 14px

a
    color: #000000
    text-decoration: none
    user-select: none;

img
    margin: 0

.button
    padding: 8px 16px;
    text-align: center
    background: #008643
    border: none
    user-select: none;
    font-size: 11px;
    line-height: 15px;
    font-weight 600
    color: #ffffff;
    text-decoration: none;
    border-radius: 40px
    white-space: pre;
    max-height: 20px
    &:hover
        background rgb(0, 129, 43)
    &:active
        box-shadow: 2px 3px 10px #464646;
    +above($mobile)
        font-size: 10px;
        line-height: 16px;    
    +above($tablet)
        padding: 10px 20px;
        font-size: 16px;   
        line-height: 20px;    

.page-section__inner
    margin auto
    max-width 1110px
    padding 40px

.title
    font-family: 'PlayfairDisplay'
    font-size 20px
    line-height 26px
    font-weight: 500;
    +above($mobile)
        font-size 28px
        line-height 36px
    +above($desktop)
        font-size 36px
        line-height 54px

.subtitle 
    font-family: 'Montserrat'
    font-weight 400
    font-size 12px
    line-height 16px
    +above($mobile)
        font-size 13px
        line-height 18px
    +above($desktop)
        font-size 14px
        line-height 21px

// Global end
// Header

.goods-card__submit-icon
    svg
        width: 20px
        height: 20px

.goods-card__img 
    text-align: center
    margin-bottom: 26px
    a
        margin-bottom: 30px  
        min-height: 120px
        img
            padding: 6px
            height 50%
            width: 50%
            object-fit: cover

.goods-cards__wrapper 
    margin: auto
    max-width 900px
    background: #F7F8F9
    padding: 10px
    display: flex
    justify-content: space-around
    flex-wrap: wrap

.goods-card__wrapper
    padding: 4px 12px
    max-width 205px
    background: #FFFFFF
    margin-bottom: 16px
    &:hover
        box-shadow: 2px 3px 10px #464646;
        transition: 0.7s
        .goods-card__article
            opacity: 1;
            transition: 0.7s
        .goods-card__submit-row
            width: 100%
            height: 100%
            opacity: 1
            transition: 0.7s

.goods-card__article
    color: #B3B7BF
    font-size 10px
    line-height 12px
    text-align: right 
    padding: 8px 0
    opacity: 0;

.goods-card__accent
    display: flex

.goods-card__accent-item
    color: #fff
    padding: 2px 6px
    font-size 10px
    line-height 14px
    background: #EC4833
    &:not(:last-child)
        margin-right 4px

.goods-card__product-name
    padding: 10px 0
    font-weight 600
    margin-bottom: 10px

.goods-card__rating-column
    display: flex
    margin-bottom: 6px

.goods-card__rating-row
    display: flex

.goods-card__rating-star
   margin: 0 6px 8px 0
   position: relative;
   display: block;
   color: #F8C55E
   width: 0px;
   height: 0px;
   border-right:  8px solid transparent;
   border-bottom: 5px  solid #F8C55E
   border-left:   8px solid transparent;
   -moz-transform:    rotate(35deg);
   -webkit-transform: rotate(35deg);
   -ms-transform:     rotate(35deg);
   -o-transform:      rotate(35deg);

.goods-card__rating-star:before 
   border-bottom: 6px solid #F8C55E
   border-left: 2px solid transparent;
   border-right: 2px solid transparent;
   position: absolute;
   height: 0;
   width: 0;
   top: -4px;
   left: -5px;
   display: block;
   content: '';
   -webkit-transform: rotate(-35deg);
   -moz-transform:    rotate(-35deg);
   -ms-transform:     rotate(-35deg);
   -o-transform:      rotate(-35deg);
   
.goods-card__rating-star:after 
   position: absolute;
   display: block;
   color: #F8C55E
   top: 0.2px;
   left: -8.5px;
   width: 0px;
   height: 0px;
   border-right: 8px solid transparent;
   border-bottom: 5px solid #F8C55E
   border-left: 8px solid transparent;
   -webkit-transform: rotate(-70deg);
   -moz-transform:    rotate(-70deg);
   -ms-transform:     rotate(-70deg);
   -o-transform:      rotate(-70deg);
   content: '';

.goods-card__rating-row
    &:last-child
        color: #B3B7BF
        font-size 10px
        line-height 12px
        font-weight 600
    
.goods-card__cost-text 
    color: #B3B7BF
    font-size 10px
    line-height 12px
    padding: 6px 0

.goods-card__cost-column
    display: flex

.goods-card__cost-price
    font-size 14px
    font-weight 700
    color #EC4833
    margin-right 6px

.goods-card__cost-discount
    background: #FDEEB9
    font-size 10px
    font-weight 700
    line-height 16px
    padding: 0 6px

.goods-card__cost-old-price 
    padding: 10px 0
    font-size 14px
    font-weight 700
    color #B3B7BF
    text-decoration: line-through

.goods-card__submit-row 
    display: flex
    justify-content: space-between;
    align-items: center;
    width: 0px;
    height: 0px;
    opacity: 0;

.goods-card__submit-button
    flex: 0 1 50%
    




