@import "./_core/_base/_main/_reset.styl"
@import "./_core/_mixins.styl"
@import "./_core/_variables.styl"
@import "../modules/modal"

html
body
  font-family 'Montserrat', Arial
  font-size 16px

img
  max-width 100%

.button
  background-color #8a0101
  color #fff
  display inline-block
  user-select none
  font-size 18px
  border-radius 15rem
  padding 12px 30px
  cursor pointer
  border none
  position relative
  +above($media-screen-tablet)
    padding 12px 35px
    font-size 20px

  +above($media-screen-desktop)
    padding 15px 40px
    font-size 22px

  &:hover
    transition .2s linear background-color
    background-color #720101

  &:focus
    outline none

  &.is-disabled
    opacity 0.5
    cursor default
    background-color #8a0101

.slick-arrow
.quiz__actions .button
  background-color #8a0101
  color #fff
  display inline-block
  user-select none
  cursor pointer
  border none
  font-size 16px
  padding 10px 27px
  border-radius 3px
  &:hover
    transition .2s linear background-color
    background-color #720101

  &:focus
    outline none

  &.is-disabled
    cursor default
    background-color #8a0101

.quiz__actions
  .button--quiz-calculate-result
    white-space nowrap
    display none

.slick-disabled
  display none

.section-title
  font-weight 700
  font-size 20px
  line-height 1.3
  +above($media-screen-tablet)
    font-size 24px

  +above($media-screen-desktop)
    font-size 30px

.form-input
  border-radius 5px
  width 100%
  will-change box-shadow
  padding 15px
  font-size 16px
  box-sizing border-box
  border solid 1px rgba(217, 216, 230, .55)
  &:hover
    transition .15s linear border-color
    border solid 1px rgba(217, 216, 230, .75)

  &:focus
    outline none
    transition .15s linear box-shadow
    box-shadow 0 1px 3px 0 rgba(0, 0, 0, .1)

.form-label
  line-height 50px
  user-select none
  cursor pointer

.label-checkbox
  display inline-block
  input
    margin-right 5px

.page-section--primary
  text-align center
  .page-section__inner
    padding 20px 25px 30px
    +above($media-screen-tablet)
      padding 40px 60px 50px

    +above($media-screen-desktop)
      padding 50px 80px 60px

  .section-title
    max-width 960px
    padding 20px 0
    margin-right auto
    margin-left auto

  .section-subtitle
    font-size 16px
    color #858585
    padding-bottom 20px
    +above($media-screen-tablet)
      font-size 18px
      padding-bottom 30px

    +above($media-screen-desktop)
      font-size 20px
      padding-bottom 40px


.intro-decoration
  max-height 300px
  +above($media-screen-desktop)
    max-height 500px

.button--start-test
  &:before
    content ""
    display inline-block
    vertical-align middle
    margin-right 6px
    width 18px
    height 18px
    background url("../images/lipokamit/checkmark-icon.svg") no-repeat
    background-size cover
    +above($media-screen-tablet)
      margin-right 8px
      width 20px
      height 20px

    +above($media-screen-desktop)
      margin-right 10px
      width 22px
      height 22px

.page-section--quiz
  visibility hidden
  background white
  position fixed
  z-index 2
  top 0
  right 0
  bottom 0
  left 0
  &.is-visible
    visibility visible

  .page-section__inner
    padding 30px

.quiz__section
  .section-title
    padding-bottom 20px
    +above($media-screen-tablet)
      padding-bottom 25px

    +above($media-screen-desktop)
      padding-bottom 30px

.form-quiz-weight
  display flex
  justify-content space-between
  align-content space-around
  flex-direction column
  +above($media-screen-tablet)
    flex-direction inherit

.label-radio
  width 100%
  margin-bottom 15px
  padding 15px
  cursor pointer
  border-radius 5px
  box-sizing border-box
  border solid 1px rgba(217, 216, 230, .55)
  will-change box-shadow
  +above($media-screen-tablet)
    width 49%
    margin-bottom 0

  &:hover
    transition .2s linear box-shadow
    box-shadow 0 1px 3px 0 rgba(0, 0, 0, .1)

  input
    margin 0 5px 0 0

.quiz
  .slick-prev
    display none !important

.quiz__actions
  position absolute
  left 50%
  transform translateX(-50%)
  z-index 1
  text-align center
  bottom 45%

.slick-slider
.slick-list
  overflow hidden

.slick-slide
  float left

.form-quiz-age
.form-quiz-desired-weight
  display flex
  .form-label
    padding-left 20px

.form-quiz-parameters
  .form-row
    display flex
    margin-bottom 1rem
    &:last-child
      margin-bottom 0

  .form-label
    padding-right 20px
    width 194px

.form-quiz-zones
.form-quiz-extra-weight-reasons
  text-align center
  .label-checkbox
    margin 0 15px 15px
    cursor pointer
    +above($media-screen-desktop)
      margin 0 15px

.form-quiz-extra-weight
.form-quiz-slimming-value
  .label-radio
    +above($media-screen-tablet)
      width 49%

  .form-row
    display flex
    justify-content space-between
    flex-direction column
    +above($media-screen-tablet)
      margin-bottom 1rem
      flex-direction inherit

.quiz-calculating-results__title
  margin-top 0
  margin-bottom 0
  line-height 1.5
  font-size 2.25rem
  font-weight 700

.quiz-calculating-results__message
  padding 15px
  font-size 1.75rem
  font-weight 700

.modal__container
  background white
  padding 15px 15px 30px
  height auto
  text-align center
  max-width 90%

.quiz-calculating-results__chart
.quiz-calculating-results__message-ready
  margin-top 50px

.quiz-calculating-results__message-ready
  font-size 1.75rem
  font-weight 700

.page-section--contact
  display none
  &.is-visible
    display block

  .page-section__inner
    padding 20px 25px 30px
    +above($media-screen-tablet)
      padding 40px 60px 50px

    +above($media-screen-desktop)
      padding 50px 80px 60px

  .section-title
    font-weight 700
    font-size 38px
    color #2e2e54
    text-align center

  .section-subtitle
    text-align center
    font-size 20px!important
    font-weight 500
    font-style normal
    font-stretch normal
    letter-spacing normal
    color grey
    line-height 1.5
    padding 1.5rem

.form-user-data
  position relative
  padding 20px
  border-radius 3px
  margin-left auto
  margin-right auto
  box-sizing border-box
  box-shadow 0 9px 40px 0 rgba(0, 0, 0, .11)
  border solid 1.2px #e8e8e8
  background-color white
  max-width 500px
  width 100%

  .form-row
    text-align left
    margin-bottom 15px
    &:last-child
      margin-bottom 0

  .form-row--submit
    margin-top 25px
    text-align center

  .button
    width 100%
    max-width 370px
    border-radius 5px
    img
      margin-right 10px