.tooltip {
    position: absolute;
    z-index: 10001;
    font-family 'Montserrat', Arial
    display: block;
    margin: 0;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    text-align: left;
    text-decoration: none;
    text-shadow: none;
    text-transform: none;
